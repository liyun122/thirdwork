<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TodoEditActivity">
    <EditText
        android:id="@+id/progressBar_edit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#429CE4"
        android:layout_width="150dp"
        android:layout_height="40dp"/>
    <Button
        android:id="@+id/progressBar_bt"
        android:text="调整"
        app:layout_constraintTop_toBottomOf="@+id/progressBar_edit"
        app:layout_constraintLeft_toLeftOf="@id/progressBar_edit"
        app:layout_constraintRight_toRightOf="@id/progressBar_edit"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>