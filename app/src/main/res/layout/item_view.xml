<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:background="#DAC7C7"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_date"
        android:text="日期"
        android:padding="5dp"
        android:gravity="center"
        android:background="#7ACAEE"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.65"
        />
    <TextView
        android:id="@+id/tv_todo"
        android:text="事项"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:background="#7ACAEE"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_date"
        app:layout_constraintLeft_toLeftOf="@+id/tv_date"
        app:layout_constraintWidth_percent="0.65"/>
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:progress="100"
        android:max="100"
        app:layout_constraintTop_toBottomOf="@+id/tv_todo"
        app:layout_constraintLeft_toLeftOf="@+id/tv_todo"
        app:layout_constraintRight_toRightOf="@+id/bt_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/progressBar_text"
        app:layout_constraintRight_toRightOf="@+id/progressBar"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"
        android:text="100%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/bt_finish"
        android:text="完成"
        android:background="#E9C047"
        android:textSize="20sp"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@id/tv_date"
        app:layout_constraintBottom_toBottomOf="@id/tv_todo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_todo"
        app:layout_constraintWidth_percent="0.3"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
